@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_UserSideLayout.cshtml";
}
<head>
    <style>
        .pgn {
            background-color: aliceblue;
            color: ButtonHighlight;
        }
    </style>
</head>

<div class="main-page best-selling">
    <div class="view_slider recommended pt-5">
        <div class="container">
            <h3>Search Results</h3>
        </div>
        <div class="container">
            <div class="row">
                @foreach (var user in ViewBag.SearchedUserList)
                {
                    <div class="col-md-3">
                        <a href="../User/ViewUserProfile?Id=@user.EncUserId">
                            @if (user.UserProfile != null && user.UserProfile != "")
                            {
                                <img class="img-fluid" src="@user.UserProfile">
                            }
                            else
                            {
                                <img class="img-fluid" src="../frontAssets/images/user/s4.png">
                            }
@*                            <img class="img-fluid" src="@user.UserProfile" onerror="this.error=null;this.src='../frontAssets/images/user/s4.png';" />
*@                        </a>
                        <div class="inner-slider">
                            <div class="inner-wrapper">
                                <div class="d-flex align-items-center">
                                    <span class="seller-image">
                                        @if (user.UserProfile != null && user.UserProfile != "")
                                        {
                                            <img class="img-fluid" src="@user.UserProfile">
                                        }
                                        else
                                        {
                                        <img class="img-fluid" src="../frontAssets/images/user/s4.png">
                                        }
                                    </span>
                                    <span class="seller-name">
                                        <a class="stretched-link" href="../User/ViewUserProfile?Id=@user.EncUserId">@user.FirstName @user.LastName</a>
                                        <a class="text-muted" href="../User/ViewUserProfile?Id=@user.EncUserId">@user.UserName</a>
                                    </span>
                                    <span class="seller-card">
                                        @if (user.Status == 1)
                                        {
                                            <div class="user-online-indicator is-online ">
                                                <i class="fa fa-circle"></i>online
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="user-online-indicator is-online" style="border-color:red;color:red !important">
                                                <i class="fa fa-circle"></i>offline
                                            </div>
                                        }
                                    </span>
                                </div>
                                <br />
                                <a style="text-decoration:none;color:black;">
                                    @if (!string.IsNullOrEmpty(user.UserDescription))
                                    {
                                        <p class="text-dark" style=" display:inline-block;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;max-width: 20ch;">@user.UserDescription</p>
                                    }
                                    else
                                    {
                                        <p class="text-dark" style=" display:inline-block;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;max-width: 20ch;visibility:hidden;">No description available</p>
                                    }
                                </a>
                                <br />
                            @*    <a class="text-dark" style="text-decoration:none;">
                                    @user.City
                                </a>
                                <a class="text-dark"><p style="font-weight:bold;">@user.Country</p></a>*@
                                <div class="footer px-2 py-0 row">
                                    <div class="p-2">
                                        <div>
                                            <span class="gig-rating text-body-2 text-dark">
                                                @if(user.AverageStars != "0")
                                                {
                                                    <svg style="margin-bottom:2px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1792 1792" width="15" height="15">
                                                        <path fill="#FFD700" d="M1728 647q0 22-26 48l-363 354 86 500q1 7 1 20 0 21-10.5 35.5t-30.5 14.5q-19 0-40-12l-449-236-449 236q-22 12-40 12-21 0-31.5-14.5t-10.5-35.5q0-6 2-20l86-500-364-354q-25-27-25-48 0-37 56-46l502-73 225-455q19-41 49-41t49 41l225 455 502 73q56 9 56 46z"></path>
                                                    </svg>
                                                    <span>@user.AverageStars</span>
                                                }
                                            </span>

                                        </div>
                                    </div>
                                    <div class="price p-2">
                                        <a class="stretched-link" href="#">
                                            Starting At $@user.PricePerHours
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

