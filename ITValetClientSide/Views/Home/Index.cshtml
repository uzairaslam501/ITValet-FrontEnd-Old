@if (ViewBag.LoggedInUseRole=="Customer")
{
    
    @if (ViewBag.recentUsers != null)
    {
        <section class="py-5">
            <div class="view_slider recommended">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>Recently Viewed & More</h3>
                            <div class="view recent-slider recommended-slider">
                                @foreach (var user in ViewBag.recentUsers)
                                {
                                    <div>
                                        <a href="../User/ViewUserProfile?Id=@user.UserEncId">
                                            @if (!string.IsNullOrEmpty(user.ProfilePicture))
                                            {
                                                <img class="img-fluid" src="@user.ProfilePicture" />
                                            }
                                            else
                                            {
                                                <img class="img-fluid" src="~/frontAssets/images/user/s4.png" />
                                            }
                                        </a>
                                        <div class="inner-slider">
                                            <div class="inner-wrapper">
                                                <div class="d-flex align-items-center">
                                                    <span class="seller-name">
                                                        <a href="../User/ViewUserProfile?Id=@user.UserEncId">@user.UserName</a>
                                                        <span class="level hint--top level-one-seller">
                                                            @user.City
                                                        </span>
                                                    </span>
                                                </div>
                                                @if (!string.IsNullOrEmpty(user.Description))
                                                {
                                                    <h3 class="description">@user.Description</h3>
                                                }
                                                else
                                                {
                                                    <h3>User Description Not Available</h3>
                                                }
                                                <div class="content-info">
                                                    <div class="rating-wrapper">
                                                        <span class="gig-rating text-body-2">
                                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1792 1792" width="15" height="15">
                                                                <path fill="currentColor"
                                                                      d="M1728 647q0 22-26 48l-363 354 86 500q1 7 1 20 0 21-10.5 35.5t-30.5 14.5q-19 0-40-12l-449-236-449 236q-22 12-40 12-21 0-31.5-14.5t-10.5-35.5q0-6 2-20l86-500-364-354q-25-27-25-48 0-37 56-46l502-73 225-455q19-41 49-41t49 41l225 455 502 73q56 9 56 46z">
                                                                </path>
                                                            </svg>
                                                            @user.UserRating
                                                            <span>/5</span>
                                                            <span>(@user.UserRatingCount)</span>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="footer">
                                                    <i class="fa fa-heart" aria-hidden="true"></i>
                                                    <div class="price">
                                                        <a href="#">
                                                            Starting At <span>$@user.PricePerHour</span>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }

}

