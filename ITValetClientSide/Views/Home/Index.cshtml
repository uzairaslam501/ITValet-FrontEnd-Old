<!-- Begin Page Content -->
<section class="py-5 homepage-search-block position-relative">
    <div class="container">
        <div class="row py-lg-5">
            <div class="col-lg-6 my-2">
                <div class="homepage-search-title">
                    <h1 class="mb-3 text-shadow text-gray-900 font-weight-bold">Find The Perfect Freelance Services For Your Business</h1>
                    <h5 class="mb-5 text-shadow text-gray-800 font-weight-normal">
                        Millions of individuals utilize IT Valet to help them with all they need to make their ideas a reality.
                    </h5>
                </div>
                @if (ViewBag.LoggedInUseRole == "Customer")
                {
                    <div class="homepage-search-form" style="">
                        <form class="form-noborder" action="@Url.Action("Search", "Home")">
                            <div class="form-row">
                                <div class="col-lg-10 col-md-10 col-sm-12 form-group">
                                    <input name="searchKeyword" type="text" placeholder="Find Services..."
                                    class="form-control border-0 form-control-lg shadow-sm" required>
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-12 form-group">
                                    <button type="submit"
                                    class="btn btn-success btn-block btn-lg btn-gradient shadow-sm">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    @if (ViewBag.PopularSearches != null)
                    {
                        <div class="popular" style="">
                            <span class="text-body-2">Popular</span>
                            <ul>
                                @foreach (var keyword in ViewBag.PopularSearches)
                                {
                                    <li><a href="@Url.Action("Search","Home",new { searchKeyword = @keyword})" class="text-body-2">@keyword</a></li>
                                }
                            </ul>
                        </div>
                    }
                }
            </div>
            
            <div class="col-lg-3 my-2">
                <div class="card box3 card-responsive headerServiceCard">
                    <div class="card-body">
                        <img class="card-img-top" src="~/frontAssets/images/CustomImages/1.png" alt="Card image cap">
                        <h5 class="card-title">Need Service?</h5>
                        <p class="card-text">An IT Valet Service Provider who’s already in your area will complete your job at transparent rates you can feel good about.</p>
                        @if(ViewBag.LoggedInUseRole == "Valet")
                        {
                            <a href="/Auth/Register?value=Customer" class="btn btn-success">Get Started</a>
                        } 
                        else if (ViewBag.LoggedInUseRole == "Customer")
                        {
                            <a href="/Auth/Register?value=ITValet" class="btn btn-success">Get Started</a>
                        }
                        else
                        {
                            <a href="/Auth/Register?value=Customer" class="btn btn-success">Get Started</a>          
                        }
                        <p class="mb-0 mt-3">Already a member? 
                            <a href="/Auth/UserLogin">
                                <u class="text-white"><b>Login</b></u>
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 mt-2">
                <div class="card box3 card-responsive headerServiceCard">
                    <div class="card-body">
                        <img class="card-img-top" src="~/frontAssets/images/CustomImages/2.png" alt="Card image cap">
                        <h5 class="card-title">Offering Service?</h5>
                        <p class="card-text">IT Valet connects with top quality service professionals in real-time. IT Valet team handles all the details of each job.</p>
                        @if (ViewBag.LoggedInUseRole == "Valet")
                        {
                            <a href="/Auth/Register?value=Customer" class="btn btn-success">Join Us</a>
                        }
                        else if (ViewBag.LoggedInUseRole == "Customer")
                        {
                            <a href="/Auth/Register?value=ITValet" class="btn btn-success">Join Us</a>
                        }
                        else
                        {
                            <a href="/Auth/Register?value=ITValet" class="btn btn-success">Join Us</a>
                        }
                        
                        <p class="mb-0 mt-3">Already offering service? 
                            <a href="/Auth/UserLogin"><u class="text-white"><b>Login</b></u></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
