@using ITValetFrontEnd.HelperClasses
@{
    ViewData["Title"] = "UpdateProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .mtop {
        margin-top: 10rem;
    }
</style>

<div class="row mtop" style="height: 700px;">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h3 class="text-bold text-center">Update Profile</h3>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("PostUpdateProfile", "Auth")" method="post">

                    @if (ViewBag.UserRecord != null)
                    {
                        var userClaims = ViewBag.UserRecord as UserClaims;
                        <input type="hidden" class="form-control" required name="Id" placeholder="" value="@userClaims.Id">
                        <div class="form-group">
                            <label class="text-bold">First Name <span class="text-danger">*</span></label>
                            <input type="text" onkeyup="limitText(this,40)" class="form-control" required name="FirstName" placeholder="Enter your First Name Here" value="@userClaims.FirstName">
                        </div>

                        <div class="form-group">
                            <label class="text-bold">Last Name <span class="text-danger">*</span></label>
                            <input type="text" onkeyup="limitText(this,40)" class="form-control" required name="LastName" placeholder="Enter your Last Name Here" value="@userClaims.LastName">
                        </div>

                        <div class="form-group">
                            <label class="text-bold">Username<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" required readonly name="Username" placeholder="Enter your Username" value="@userClaims.UserName">
                            <span class="text-danger" id="nameErrMsg"></span>
                        </div>

                        <div class="form-group">
                            <label class="text-bold">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" required readonly name="Email" placeholder="Please Enter your Email" value="@userClaims.Email">
                            <span class="text-danger" id="updErrMsg"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" id="updSubBtn" class="btn btn-success">Update <i class="icon-database-insert position-right"></i></button>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@section CustomJs{
    <script>
        var message = '@ViewBag.Message';
        if(message!=""){
            triggerSweetAlert(message, "@ProjectVariables.SuccessColor");
        }
    </script>
}